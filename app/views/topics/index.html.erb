<div class="row">
  <div class="col-md-12">
    <h1>BlockMarks &nbsp;
      <%= link_to '<i class="glyphicon glyphicon-plus"></i>'.html_safe, new_topic_path %>
    </h1>

    <hr />

    <% @topics.each do |topic| %>
      <div class="media">
        <div class="media-heading">
          <h2><%= link_to topic.title, topic %></h2>
        </div>
        <div class="media-body">
          <% topic.bookmarks.each do |bookmark| %>
            <h4><%= link_to bookmark.url, bookmark %></h4>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
