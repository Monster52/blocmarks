<div>
  <% if like = current_user.liked(bookmark) %>
    <%= link_to [bookmark, like], class: 'btn btn-danger btn-xs', method: :delete do %>
      <i class="glyphicon glyphicon-star-empty"> </i>
    <% end %>
  <% else %>
    <%= link_to [bookmark, Like.new], class: 'btn btn-primary btn-xs', method: :post do %>
      <i class="glyphicon glyphicon-star"> </i>
    <% end %>
  <% end %>
</div>
